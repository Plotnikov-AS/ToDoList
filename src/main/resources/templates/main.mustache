<html xmlns="http://www.w3.org/1999/html">
    <body>
        <div>Список задач</div>
        {{#tasks}}
            <div>
                <b># {{id}}</b>
                <i>{{status}}</i>
                <span>{{shortDesc}}</span>
                <span>{{description}}
                <button type="submit">X</button>
                </span>
            </div>
        {{/tasks}}
        <div>Новая задача
            <form method="post">
                <input type="text" name="shortDesc" placeholder="Краткое описание" />
                <input type="text" name="description" placeholder="Полное описание">
                <button type="submit">Сохранить</button>
            </form>
        </div>
        <div>Найти задачу
            <form method="post" action="filterById">
                <input type="text" name="filter" placeholder="№ задачи">
                <button type="submit">Найти</button>
            </form>
        </div>
        <div>Или
            <form method="post" action="filterByShortDesc">
                <input type="text" name="filter" placeholder="Краткое описание">
                <button type="submit">Найти</button>
            </form>
        </div>
    </body>
</html>